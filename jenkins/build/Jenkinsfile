
pipeline {
    agent any
    stages {

        stage('build') {
            steps {
                echo "${BUILD_NUMBER} is the build number"
                echo "${GIT_BRANCH} checked out"
                bat "ssh -i 'C:/keys/ssh_key' transpara@192.168.1.114 'git clone https://github.com/EyderACM/Devops-React.git'"
                bat "ssh -i 'C:/keys/ssh_key' transpara@192.168.1.114 'npm i'"
                bat "ssh -i 'C:/keys/ssh_key' transpara@192.168.1.114 'npm run build'"
            }
        }

    }
    post {
        success {
            echo "Build success "
            build job:'frontdeploy/'+GIT_BRANCH
        }
    }
}
